datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id           String   @id @default(cuid())
    email        String   @unique
    passwordHash String
    role         Role     @default(VIEWER)
    createdAt    DateTime @default(now())
}

enum Role {
    ADMIN
    MANAGER
    VIEWER
}
